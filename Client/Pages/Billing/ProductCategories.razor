@page "/product-categories"
@attribute [Authorize]

<PageTitle>ProductCategories</PageTitle>
<RadzenStack>
    <RadzenRow AlignItems="AlignItems.Center">
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenText Text="ProductCategories" TextStyle="TextStyle.H3" TagName="TagName.H1" style="margin: 0" />
        </RadzenColumn>
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                <RadzenSplitButton Icon="get_app" Text="Export" Click="@ExportClick" Variant="Variant.Flat" Shade="Shade.Lighter">
                    <RadzenSplitButtonItem Text="Excel" Value="xlsx" />
                    <RadzenSplitButtonItem Text="CSV" Value="csv" />
                </RadzenSplitButton>
                <RadzenButton Icon="add_circle_outline" Text="Add" Click="@AddButtonClick" Variant="Variant.Flat" />
            </RadzenStack>
        </RadzenColumn>
    </RadzenRow>
    <RadzenTextBox Placeholder="Search ..." style="display: block; width: 100%" @oninput="@Search" />
    <RadzenRow>
      <RadzenColumn SizeMD=12>
        <RadzenDataGrid @ref="grid0" ColumnWidth="200px"   AllowFiltering="true" FilterMode="FilterMode.Advanced" AllowPaging="true" AllowSorting="true" ShowPagingSummary="true" PageSizeOptions=@(new int[]{5, 10, 20, 30})
            Data="@productCategories" LoadData="@Grid0LoadData" Count="@count" TItem="ThrottleCoreCRM.Server.Models.Throttle_Core_Billing.ProductCategory" RowDoubleClick="@EditRow">
            <Columns>
                <RadzenDataGridColumn TItem="ThrottleCoreCRM.Server.Models.Throttle_Core_Billing.ProductCategory" Property="fldRecordID" Title="fld Record I D">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ThrottleCoreCRM.Server.Models.Throttle_Core_Billing.ProductCategory" Property="PRODUCT_CATEGORY_CODE" Title="P R O D U C T C A T E G O R Y C O D E">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ThrottleCoreCRM.Server.Models.Throttle_Core_Billing.ProductCategory" Property="PRODUCT_CATEGORY_DESC" Title="P R O D U C T C A T E G O R Y D E S C">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ThrottleCoreCRM.Server.Models.Throttle_Core_Billing.ProductCategory" Property="CATEGORY_SHORT_DESC" Title="C A T E G O R Y S H O R T D E S C">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ThrottleCoreCRM.Server.Models.Throttle_Core_Billing.ProductCategory" Property="SPECIAL_COMMISSION_SELECT" Title="S P E C I A L C O M M I S S I O N S E L E C T">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ThrottleCoreCRM.Server.Models.Throttle_Core_Billing.ProductCategory" Property="ALT_GL_SALES_REF" Title="A L T G L S A L E S R E F">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ThrottleCoreCRM.Server.Models.Throttle_Core_Billing.ProductCategory" Property="ALT_GL_PURCHASE_REF" Title="A L T G L P U R C H A S E R E F">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ThrottleCoreCRM.Server.Models.Throttle_Core_Billing.ProductCategory" Property="SWITCHES" Title="S W I T C H E S">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ThrottleCoreCRM.Server.Models.Throttle_Core_Billing.ProductCategory" Property="fldSysUserID" Title="fld Sys User I D">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ThrottleCoreCRM.Server.Models.Throttle_Core_Billing.ProductCategory" Property="fldSysCompID" Title="fld Sys Comp I D">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ThrottleCoreCRM.Server.Models.Throttle_Core_Billing.ProductCategory" Property="fldSysDate_Created" Title="fld Sys Date Created">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ThrottleCoreCRM.Server.Models.Throttle_Core_Billing.ProductCategory" Property="fldSysDate_LastModified" Title="fld Sys Date Last Modified">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ThrottleCoreCRM.Server.Models.Throttle_Core_Billing.ProductCategory" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">
                    <Template Context="productCategory">

                        <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="delete" Size="ButtonSize.Medium"
                            Shade="Shade.Lighter" Variant="Variant.Flat"
                            Click=@(args => GridDeleteButtonClick(args, productCategory)) @onclick:stopPropagation="true" />
                    </Template>
                </RadzenDataGridColumn>
            </Columns>

        </RadzenDataGrid>

    </RadzenColumn>
  </RadzenRow>
</RadzenStack>
