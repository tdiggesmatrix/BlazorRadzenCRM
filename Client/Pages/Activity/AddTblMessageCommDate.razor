                  <ChildContent>
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@tblMessageCommDate.fldUID" Name="fldUID" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="fld Type" Variant="Variant.Filled">
                  <ChildContent>
