              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="fld Date Checked" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenDatePicker DateFormat="MM/dd/yyyy" style="display: block; width: 100%" @bind-Value="@tblMessageCommDate.fldDateChecked" Name="fldDateChecked" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="fld Max Date Time" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenDatePicker DateFormat="MM/dd/yyyy" style="display: block; width: 100%" @bind-Value="@tblMessageCommDate.fldMaxDateTime" Name="fldMaxDateTime" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="fld Records Added" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@tblMessageCommDate.fldRecordsAdded" Name="fldRecordsAdded" />
