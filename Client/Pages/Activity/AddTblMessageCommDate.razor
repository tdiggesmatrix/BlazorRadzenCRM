            </RadzenFormField>
            <RadzenFormField Text="fld Records Addedwith Errors" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@tblMessageCommDate.fldRecordsAddedwithErrors" Name="fldRecordsAddedwithErrors" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="fld Records Updated" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@tblMessageCommDate.fldRecordsUpdated" Name="fldRecordsUpdated" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="fld Records Updatedwith Errors" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@tblMessageCommDate.fldRecordsUpdatedwithErrors" Name="fldRecordsUpdatedwithErrors" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="fld Category" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@tblMessageCommDate.fldCategory" Name="fldCategory" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="fld Sys User I D" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@tblMessageCommDate.fldSysUserID" Name="fldSysUserID" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="fld Sys Comp I D" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@tblMessageCommDate.fldSysCompID" Name="fldSysCompID" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="fld Sys Date Created" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenDatePicker DateFormat="MM/dd/yyyy" style="display: block; width: 100%" @bind-Value="@tblMessageCommDate.fldSysDate_Created" Name="fldSysDate_Created" />
              </ChildContent>
