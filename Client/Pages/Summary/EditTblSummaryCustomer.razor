              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="fld Num Email Bad" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@tblSummaryCustomer.fldNumEmailBad" Name="fldNumEmailBad" />
              </ChildContent>
