@page "/add-tbl-customer-franchise"
@attribute [Authorize]

<PageTitle>Add TblCustomerFranchise</PageTitle>
    <RadzenColumn SizeMD=12>
        <RadzenAlert Shade="Shade.Lighter" Variant="Variant.Flat" Size="AlertSize.Small" AlertStyle="AlertStyle.Danger" Visible="@errorVisible">Cannot save TblCustomerFranchise</RadzenAlert>
        <RadzenTemplateForm TItem="ThrottleCoreCRM.Server.Models.Throttle_Core_Customer.TblCustomerFranchise" Data="@tblCustomerFranchise" Visible="@(tblCustomerFranchise != null && canEdit)" Submit="@FormSubmit">
          <RadzenStack>
            <RadzenFormField Text="fld Franchise Name" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@tblCustomerFranchise.fldFranchiseName" Name="fldFranchiseName" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="fld Address1" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@tblCustomerFranchise.fldAddress1" Name="fldAddress1" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="fld Address2" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@tblCustomerFranchise.fldAddress2" Name="fldAddress2" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="fld Address3" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@tblCustomerFranchise.fldAddress3" Name="fldAddress3" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="fld City" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@tblCustomerFranchise.fldCity" Name="fldCity" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="fld State" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@tblCustomerFranchise.fldState" Name="fldState" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="fld Zip" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@tblCustomerFranchise.fldZip" Name="fldZip" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="fld Country" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@tblCustomerFranchise.fldCountry" Name="fldCountry" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="fld Phone" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@tblCustomerFranchise.fldPhone" Name="fldPhone" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="fld Alternate Phone" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@tblCustomerFranchise.fldAlternatePhone" Name="fldAlternatePhone" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="fld Fax" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@tblCustomerFranchise.fldFax" Name="fldFax" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="fld Website Url" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@tblCustomerFranchise.fldWebsiteUrl" Name="fldWebsiteUrl" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="fld General Email Address" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@tblCustomerFranchise.fldGeneralEmailAddress" Name="fldGeneralEmailAddress" />
              </ChildContent>
            </RadzenFormField>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="fld Active" Component="fldActive" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenCheckBox @bind-Value="@tblCustomerFranchise.fldActive" Name="fldActive" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenFormField Text="fld Latitude" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@tblCustomerFranchise.fldLatitude" Name="fldLatitude" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="fld Longitude" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@tblCustomerFranchise.fldLongitude" Name="fldLongitude" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="fld Company Google Places I D" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@tblCustomerFranchise.fldCompanyGooglePlacesID" Name="fldCompanyGooglePlacesID" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="fld Sys User I D" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@tblCustomerFranchise.fldSysUserID" Name="fldSysUserID" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="fld Sys Comp I D" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@tblCustomerFranchise.fldSysCompID" Name="fldSysCompID" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="fld Sys Date Created" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenDatePicker DateFormat="MM/dd/yyyy" style="display: block; width: 100%" @bind-Value="@tblCustomerFranchise.fldSysDate_Created" Name="fldSysDate_Created" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="fld Sys Date Last Modified" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenDatePicker DateFormat="MM/dd/yyyy" style="display: block; width: 100%" @bind-Value="@tblCustomerFranchise.fldSysDate_LastModified" Name="fldSysDate_LastModified" />
              </ChildContent>
            </RadzenFormField>
          </RadzenStack>
          <RadzenStack style="margin-top:1rem;" Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                    <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="save" Text="Save" Variant="Variant.Flat" />
                    <RadzenButton ButtonStyle="ButtonStyle.Light" Text="Cancel" Variant="Variant.Flat" Click="@CancelButtonClick"  />
          </RadzenStack>
        </RadzenTemplateForm>
    </RadzenColumn>

