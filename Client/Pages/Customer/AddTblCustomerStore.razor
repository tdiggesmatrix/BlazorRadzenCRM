@page "/add-tbl-customer-store"
@attribute [Authorize]

<PageTitle>Add TblCustomerStore</PageTitle>
    <RadzenColumn SizeMD=12>
        <RadzenAlert Shade="Shade.Lighter" Variant="Variant.Flat" Size="AlertSize.Small" AlertStyle="AlertStyle.Danger" Visible="@errorVisible">Cannot save TblCustomerStore</RadzenAlert>
        <RadzenTemplateForm TItem="ThrottleCoreCRM.Server.Models.Throttle_Core_Customer.TblCustomerStore" Data="@tblCustomerStore" Visible="@(tblCustomerStore != null && canEdit)" Submit="@FormSubmit">
          <RadzenStack>
            <RadzenFormField Text="fld Customer Record I D" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@tblCustomerStore.fldCustomerRecordID" Name="fldCustomerRecordID" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="fld Store Name" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@tblCustomerStore.fldStoreName" Name="fldStoreName" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="fld D B A" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@tblCustomerStore.fldDBA" Name="fldDBA" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="fld Store Number" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@tblCustomerStore.fldStoreNumber" Name="fldStoreNumber" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="fld Store Number Literal" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@tblCustomerStore.fldStoreNumberLiteral" Name="fldStoreNumberLiteral" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="fld Store Nick Name" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@tblCustomerStore.fldStoreNickName" Name="fldStoreNickName" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="fld Address1" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@tblCustomerStore.fldAddress1" Name="fldAddress1" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="fld Address2" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@tblCustomerStore.fldAddress2" Name="fldAddress2" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="fld Address3" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@tblCustomerStore.fldAddress3" Name="fldAddress3" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="fld City" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@tblCustomerStore.fldCity" Name="fldCity" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="fld State" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@tblCustomerStore.fldState" Name="fldState" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="fld Zip" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@tblCustomerStore.fldZip" Name="fldZip" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="fld Country" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@tblCustomerStore.fldCountry" Name="fldCountry" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="fld Phone" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@tblCustomerStore.fldPhone" Name="fldPhone" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="fld Fax" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@tblCustomerStore.fldFax" Name="fldFax" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="fld Store Website Url" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@tblCustomerStore.fldStoreWebsiteUrl" Name="fldStoreWebsiteUrl" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="fld Store General Email Address" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@tblCustomerStore.fldStoreGeneralEmailAddress" Name="fldStoreGeneralEmailAddress" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="fld Store Alternate Email" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@tblCustomerStore.fldStoreAlternateEmail" Name="fldStoreAlternateEmail" />
              </ChildContent>
            </RadzenFormField>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="fld Active" Component="fldActive" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenCheckBox @bind-Value="@tblCustomerStore.fldActive" Name="fldActive" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenFormField Text="fld Latitude" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@tblCustomerStore.fldLatitude" Name="fldLatitude" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="fld Longitude" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@tblCustomerStore.fldLongitude" Name="fldLongitude" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="fld Company Google Places I D" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@tblCustomerStore.fldCompanyGooglePlacesID" Name="fldCompanyGooglePlacesID" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="fld Hours1" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@tblCustomerStore.fldHours1" Name="fldHours1" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="fld Hours2" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@tblCustomerStore.fldHours2" Name="fldHours2" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="fld Hours3" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@tblCustomerStore.fldHours3" Name="fldHours3" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="fld Open Hours Per Day" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@tblCustomerStore.fldOpenHoursPerDay" Name="fldOpenHoursPerDay" />
