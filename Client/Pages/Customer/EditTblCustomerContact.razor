            <RadzenFormField Text="fld Address1" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@tblCustomerContact.fldAddress1" Name="fldAddress1" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="fld Address2" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@tblCustomerContact.fldAddress2" Name="fldAddress2" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="fld Address3" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@tblCustomerContact.fldAddress3" Name="fldAddress3" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="fld City" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@tblCustomerContact.fldCity" Name="fldCity" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="fld State" Variant="Variant.Filled">
                  <ChildContent>
