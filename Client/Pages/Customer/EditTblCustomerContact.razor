                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@tblCustomerContact.fldLinkedInProfile" Name="fldLinkedInProfile" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="fld Jobfunction" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@tblCustomerContact.fldJobfunction" Name="fldJobfunction" />
