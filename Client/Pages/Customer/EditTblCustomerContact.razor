                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@tblCustomerContact.fldFullName" Name="fldFullName" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="fld First Name" Variant="Variant.Filled">
                  <ChildContent>
