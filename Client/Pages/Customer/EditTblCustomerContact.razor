              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="fld Last Name" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@tblCustomerContact.fldLastName" Name="fldLastName" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="fld Email" Variant="Variant.Filled">
                  <ChildContent>
