            <RadzenFormField Text="fld Country" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@tblCustomerContact.fldCountry" Name="fldCountry" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="fld Phone" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@tblCustomerContact.fldPhone" Name="fldPhone" />
              </ChildContent>
