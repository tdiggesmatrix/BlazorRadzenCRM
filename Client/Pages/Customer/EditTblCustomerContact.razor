            </RadzenFormField>
            <RadzenFormField Text="fld Email Domain" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@tblCustomerContact.fldEmailDomain" Name="fldEmailDomain" />
              </ChildContent>
            </RadzenFormField>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="fld Email Confirmed" Component="fldEmailConfirmed" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenCheckBox @bind-Value="@tblCustomerContact.fldEmailConfirmed" Name="fldEmailConfirmed" />
