            </RadzenFormField>
            <RadzenFormField Text="fld Language Record I D" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@tblWebSiteUser.fldLanguageRecordID" Name="fldLanguageRecordID" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="fld Firstname" Variant="Variant.Filled">
