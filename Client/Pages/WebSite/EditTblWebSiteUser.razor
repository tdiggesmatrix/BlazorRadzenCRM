                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@tblWebSiteUser.fldSysCompID" Name="fldSysCompID" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="fld Sys Date Created" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenDatePicker DateFormat="MM/dd/yyyy" style="display: block; width: 100%" @bind-Value="@tblWebSiteUser.fldSysDate_Created" Name="fldSysDate_Created" />
              </ChildContent>
