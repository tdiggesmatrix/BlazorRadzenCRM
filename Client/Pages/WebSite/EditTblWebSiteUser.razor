                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@tblWebSiteUser.fldEmail" Name="fldEmail" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="fld Password" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@tblWebSiteUser.fldPassword" Name="fldPassword" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="fld Status" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@tblWebSiteUser.fldStatus" Name="fldStatus" />
