                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@tblWebSiteUser.fldUserName" Name="fldUserName" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="fld User I D" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@tblWebSiteUser.fldUserID" Name="fldUserID" />
